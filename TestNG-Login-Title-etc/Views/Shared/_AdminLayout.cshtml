<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("myDiary", "Index", "Admin", new { @class="navbar-brand" ,style="font-family:'Lucida Handwriting';font-size:40px;color:dodgerblue" })
                @Html.Label("Admin", new { @class = "navbar-brand" , style = "position:relative;left:-20px" })
            </div>
            <!-- /.navbar-header -->
            <ul class="nav navbar-top-links navbar-right">

                <!-- /.dropdown -->
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i><img src="../Images/glyphicons-4-user.png" alt="Alternate Text" /> </i> <i class="caret"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            @Html.ActionLink("Logout", "Logout", "Admin", new { @class="" })
                            @*<a href="login.html"><i class="fa fa-sign-out fa-fw"></i> Logout</a>*@
                        </li>
                    </ul>
                    <!-- /.dropdown-user -->
                </li>
                <!-- /.dropdown -->
            </ul>
            <!-- /.navbar-top-links -->
            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li><br /></li>
                        <li>
                            @Html.ActionLink("Dashboard", "Index", "Admin")
                            @*<a href="index.html"><i class="fa fa-dashboard fa-fw"></i> Dashboard</a>*@
                        </li>
                        <li>
                            <a href="/Admin/SearchTab"><i class="fa fa-bar-chart-o fa-fw"></i> Users<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="/Admin/SearchTab">Delete User</a>
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                        <li>
                            <a href="/Admin/SearchTab"><i class="fa fa-bar-chart-o fa-fw"></i> Posts<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="/Admin/Posts">Delete Post</a>
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>

                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>
        </div>
        <div>
            @RenderBody()
        </div>
</body>
</html>
